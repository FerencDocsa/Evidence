@model IEnumerable<Evidence.Models.Employee>


<div style="display: flex; justify-content: space-between;">
    <h2>Seznam zaměstnanců</h2>
    <p><a asp-action="Create" class="btn btn-primary">Přidat</a></p>

</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Jmeno
            </th>

            <th>
                Pozice
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionNavigation.Name)
                </td>
            </tr>
        }
    </tbody>
</table>